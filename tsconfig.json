{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node", "playwright"]
  },
  "include": [
    "*.ts",
    "*.mts",
    "tests/**/*.ts",
    "fixtures/**/*.ts",
    "requests/**/*.ts",
    "utils/**/*.ts",
    "pages/**/*.ts",
    "helpers/**/*.ts",
    "enums/**/*.ts"
  ],
  "exclude": ["node_modules", "dist", "playwright-report", "test-results"]
}
